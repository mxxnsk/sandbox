<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <RelativeLayout android:id="@+id/header" android:layout_height="50dp" android:layout_width="match_parent" android:layout_alignParentTop="true"/>
    <RelativeLayout android:id="@+id/footer" android:layout_height="90dp" android:layout_width="match_parent" android:layout_alignParentBottom="true"/>
    <WebView android:layout_below="@id/header" android:layout_above="@id/footer"
            android:id="@+id/webview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            />
</RelativeLayout>

